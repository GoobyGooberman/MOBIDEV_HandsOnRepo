<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/s14_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.neildg.mobidev_handsonrepo.activity_restaurant_workspace.S14_RestaurantActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="16dp">

        <Button
            android:id="@+id/s14_add_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add" />

        <Button
            android:id="@+id/s14_surprise_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surprise!" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="My Restaurants"
        android:textSize="20dp"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/s14_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
